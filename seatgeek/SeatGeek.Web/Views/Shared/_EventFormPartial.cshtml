@model EventFormModel


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Title...">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" placeholder="Address...">
                <span asp-validation-for="Address" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" placeholder="City...">
                <span asp-validation-for="City" class="small text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.Start" class="form-label-add-edit">Start</label>
                    <input asp-for="@Model.Start" class="form-control" aria-required="true" value="@DateTime.Now.ToString("yyyy-MM-dd H:mm")" />
                    <span asp-validation-for="@Model.Start" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.End" class="form-label-add-edit">End</label>
                    <input asp-for="@Model.End" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd H:mm")" />
                    <span asp-validation-for="@Model.End" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="This event..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxCapacity"></label>
                <input asp-for="MaxCapacity" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="MaxCapacity" class="small text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control" id="CategoryId">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
            <div>
                <h2 class="text-center " style="color:indigo !important">Add Tickets</h2>
                <p class="text-center "> You can choose different tickets templates.</p>
            </div>
            
       

            <div class="row">
                @for (var i = 0; i < Model.Tickets.Count; i++)
                {
                    <div class="col-md-4">
                        <!-- Use col-md-4 to fit three in a row on medium-sized screens and larger -->
                        <div class="ticket-container" style="border-block-color:blueviolet">
                            <h3 class="text-center" style="text-overflow "> @Model.Tickets[i].Type</h3>
                            <div class="form-group">
                                <label asp-for="Tickets[i].Type"></label>
                                <input asp-for="Tickets[i].Type" class="form-control" />
                                <span asp-validation-for="Tickets[i].Type" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Tickets[i].Quantity"></label>
                                <input asp-for="Tickets[i].Quantity" class="form-control" />
                                <span asp-validation-for="Tickets[i].Quantity" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Tickets[i].Price"></label>
                                <input asp-for="Tickets[i].Price" class="form-control" />
                                <span asp-validation-for="Tickets[i].Price" class="text-danger"></span>
                            </div>
                            
                        </div>
                        
                    </div>
                }
            </div>

            <div class="text-center">
                <input class="btn btn-lg  mt-4" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>



